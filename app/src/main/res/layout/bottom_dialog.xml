<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/round_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/baseline_location_pin_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="De La Salle University"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:padding="4dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/rating_selected"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="24dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/rating_question"
                android:textSize="12sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rating_buttons"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:text="1"
                    android:textColor="@drawable/radio_text_selector"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rating_buttons"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:text="2"
                    android:textColor="@drawable/radio_text_selector"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rating_buttons"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:text="3"
                    android:textColor="@drawable/radio_text_selector"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rating_buttons"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:text="4"
                    android:textColor="@drawable/radio_text_selector"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rating_buttons"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:text="5"
                    android:textColor="@drawable/radio_text_selector"
                    tools:ignore="TouchTargetSizeCheck" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="322dp"
            android:layout_height="48dp"
            android:background="@drawable/customized_add_notes"
            android:elevation="8dp"
            android:ems="10"
            android:inputType="text"
            android:text="@string/add_notes"
            android:textColor="@color/no_rating"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.895"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>