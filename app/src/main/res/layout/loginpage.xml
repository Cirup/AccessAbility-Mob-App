<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204.17dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aa_icon"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:fontFamily="sans-serif"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/loginAccText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/poppins_light"
        android:text="LOGIN TO YOUR ACCOUNT"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailHolder"
        style="@style/inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elegantTextHeight="false"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:text="Enter Email"
        android:textColor="#666666"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passHolder"
        style="@style/inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/noto_sans"
        android:inputType="text"
        android:text="Enter Password"
        android:textColor="#666666"
        android:textSize="16sp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logreg_btn"
        android:fontFamily="@font/inter_semibold"
        android:text="LOGIN"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/login_href"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_light"
        android:gravity="bottom"
        android:text="CREATE AN ACCOUNT"
        android:textAlignment="center"
        android:textColor="#3075D9" />
</LinearLayout>